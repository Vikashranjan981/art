<%layout('layouts/boilerplate')%>


<div class="row">
    <h1 class="text-center">New Art</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/arts" method="POST" novalidate class="validated-forms" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label"  for="title">Title</label>
                <input class="form-control"  type="text" id="title" name="art[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="art[description]" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Art Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" aria-describedby="price-label" placeholder="0.00" name="art[price]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                  </div>
            </div> 
           

           

              <div class="mb-3">
            <div class="input-group custom-file">
                
                <input type="file" class="form-control" class="custom-file-input" id="inputGroupFile02" name="image" multiple>
                <label class="input-group-text" class="custom-file-label" for="inputGroupFile02">Upload</label>
              </div>
            </div>
             
            <div class="mb-3">
                <button class="btn btn-success">add arts</button>
            </div>
        </form>
        <div>
            <a href="/arts">All Arts</a>
        </div>

    </div>
</div>


