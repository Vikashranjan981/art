<%layout('layouts/boilerplate')%>





    <div class="row">
        <h1 class="text-center">Edit Art</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/arts/<%=art._id%>?_method=PUT" method="POST" novalidate class="validated-forms"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="art[title]" value="<%=art.title%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="art[description]"
                        required><%=art.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Art Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" aria-describedby="price-label"
                            placeholder="0.00" name="art[price]" value="<%=art.price%>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group custom-file">

                        <input type="file" class="form-control" class="custom-file-input" id="inputGroupFile02"
                            name="image" multiple>
                        <label class="input-group-text" class="custom-file-label" for="inputGroupFile02">Upload</label>
                    </div>
                </div>


                <div class="mb-3">
                    <% art.images.forEach(function(img,i){%>
                          <img src="<%=img.thumbnail %>" class="img-thumbnail"  alt="">
                            <div class="form-check-inline">
                                <input type="checkbox" id="image<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            </div>
                            <label for="">Delete?</label>

                   <% }) %>


                </div>

                <div class="mb-3">
                    <button class="btn btn-info">Update arts</button>
                </div>
            </form>
            <div>
                <a href="/arts">all arts</a>
            </div>

        </div>
    </div>


